void eliminarPsicologo() {
	
	FILE *ptr;
	Persona p;
	int pos;
	char nombre[MAX_NOMBRE];
	ptr=fopen("psicologos.dat","r+b");
	if(ptr==NULL)
		cout<<"No existe el archivo"<<endl;
	else
	{
		
		encabezadoEliminarPsicologo();
		cout << "Ingrese el nombre del psicologo a eliminar: ";
		cin>>(nombre);
		pos=obtenerPosicionEnArchivoPsicologo(nombre);
		fseek(ptr,(pos-1)*sizeof(p),SEEK_SET);
		fread(&p,sizeof(p),1,ptr);
		if (!feof(ptr)&&p.estado==9)
		{
			p.estado=0;
			fseek(ptr,(pos-1)*sizeof(p),SEEK_SET);
			fwrite (&p,sizeof(p),1,ptr);
		}
		fclose(ptr);
	}
}

void eliminarAbogado() {
	
	FILE *ptr;
	Persona p;
	char nombre[MAX_NOMBRE];
	int pos;
	ptr=fopen("abogados.dat","r+b");
	if(ptr==NULL)
		cout<<"No existe el archivo"<<endl;
	else
	{
		
		encabezadoEliminarAbogado();
		cout << "Ingrese el nombre del Abogado a eliminar: ";
		cin>>(nombre);
		pos=obtenerPosicionEnArchivoAbogado(nombre);
		fseek(ptr,(pos-1)*sizeof(p),SEEK_SET);
		fread(&p,sizeof(p),1,ptr);
		if (!feof(ptr)&&p.estado==9)
		{
			p.estado=0;
			fseek(ptr,(pos-1)*sizeof(p),SEEK_SET);
			fwrite (&p,sizeof(p),1,ptr);
		}
		fclose(ptr);
	}
}

void agregarAdministrador() {

	FILE *ptr;
	Administrador a;
	
	ptr=fopen("administradores.dat","ab");
