		system("cls");

		// lectura de contrasena

		encabezadoAgregarUsuario();

		cout << "Ingrese una contrasena valida" << endl;
		cout << "Presione cualquier tecla para continuar" << endl;
		getch();
		system("cls");
		encabezadoAgregarUsuario();
		// lectura de contrasena
		cout << "Ingrese su contrasena: ";
		cin>>(u.contrasena);

		system("cls");

		// lectura de nombre

		encabezadoAgregarUsuario();

		cout << "Ingrese solo caracteres alfabeticos para el nombre" << endl;
		cout << "Presione cualquier tecla para continuar" << endl;
		getch();
		system("cls");
		encabezadoAgregarUsuario();

		cout << "Ingrese su nombre: ";
		cin>>(u.nombre);

		system("cls");

		// lectura de email

		encabezadoAgregarUsuario();

		cout << "Ingrese su email: ";
		cin>>(u.email);

		system("cls");

		// lectura de genero

		encabezadoAgregarUsuario();

		cout << "Ingrese un una sola letra valida para el genero (M / F)" << endl;
		cout << "Presione cualquier tecla para continuar" << endl;
		getch();
		system("cls");
		encabezadoAgregarUsuario();

		cout << "Ingrese su genero (M / F): ";
		cin>>(u.genero);

			system("cls");

		// lectura de telefono

		encabezadoAgregarUsuario();

		cout << "Ingrese un numero de telefono valido para Bolivia" << endl;
		cout << "Presione cualquier tecla para continuar" << endl;
		getch();
		system("cls");
		encabezadoAgregarUsuario();

		cout << "Ingrese su numero de telefono: ";
		cin>>(u.telefono);

		system("cls");

		u.estado = 9;
		fwrite(&u, sizeof(u), 1, ptr);
		fclose(ptr);

		cout << "Usuario agregado!" << endl << "Presione cualquier tecla para continuar." << endl;
	}
	}

void eliminarAdministrador() {
	cin.ignore();
FILE *ptr;
	Administrador a;
	int pos;
	char user[MAX_USERNAME];
	ptr=fopen("administradores.dat","r+b");
	if(ptr==NULL)
		cout<<"No existe el archivo"<<endl;
	else
	{
		encabezadoEliminarAdministrador();
		cout << "Ingrese el username a eliminar: ";
		cin>>(user);

		pos = obtenerPosicionEnArchivoAdministrador(user);
		fseek(ptr, (pos - 1) * sizeof(a), SEEK_SET);
		fread(&a, sizeof(a), 1, ptr);
		
		if (!feof(ptr) && a.estado==9)
		{
			a.estado = 0;
		fseek(ptr, (pos - 1) * sizeof(a), SEEK_SET);
		fwrite(&a, sizeof(a), 1, ptr);
		}
		fclose (ptr);
		cout << "Administrador eliminado!" << endl << "Presione cualquier tecla para continuar." << endl;
	}
}

void eliminarUsuario() {
	
FILE *ptr;
	Usuario u;
	int pos;
	char user[MAX_USERNAME];
	ptr=fopen("usuarios.dat","r+b");
	if(ptr==NULL)
		cout<<"No existe el archivo"<<endl;
	else
	{
		encabezadoEliminarUsuario();
		cout << "Ingrese el username a eliminar: ";
		cin>>(user);

		pos = obtenerPosicionEnArchivoAdministrador(user);
		fseek(ptr, (pos - 1) * sizeof(u), SEEK_SET);
		fread(&u, sizeof(u), 1, ptr);
		
		if (!feof(ptr) && u.estado==9)
		{
			u.estado = 0;
		fseek(ptr, (pos - 1) * sizeof(u), SEEK_SET);
		fwrite(&u, sizeof(u), 1, ptr);
		}
		fclose (ptr);
		cout << "Administrador eliminado!" << endl << "Presione cualquier tecla para continuar." << endl;
	}
}

void mostrarPsicologos() {
	imprimirArchivoPsicologo();
}

void mostrarAbogados() {
	imprimirArchivoAbogado();
}	

void imprimirArchivoUsuario() {
	cin.ignore();
	FILE *ptr;
	Usuario u;
	ptr=fopen("usuarios.dat", "rb"); 
	
	if(ptr==NULL)
		cout<<"No existe el archivo "<<endl;
	else
	{
		fread (&u,sizeof(u),1,ptr);
		cout<<"NOMBRE			USERNAME			GENERO				EMAIL			TELEFONO"<<endl;
		cout<<"----------------------------------------------------------------------------------"<<endl;
		while(!feof(ptr))
		{
			if(u.estado==9)
			{
				cout<<u.nombre<<"\t""\t"<<u.username<<"\t""\t"<<u.genero<<"\t""\t"<<u.email<<"\t""\t"<<u.telefono<<endl;
			}
			fread(&u,sizeof(u),1,ptr);
		}
		cout<<"--------------------------------------------------------------------------------"<<endl;
		fclose(ptr);
	}
}

void imprimirArchivoAdministrador() {
	cin.ignore();
	FILE *ptr;
	Administrador a;
	ptr=fopen("administradores.dat", "rb");
	
	if(ptr==NULL)
		cout<<"No existe el archivo "<<endl;
	else
	{
		fread (&a,sizeof(a),1,ptr);
		cout<<"USERNAME			CONTRASENA"<<endl;
		cout<<"-------------------------------------"<<endl;
		while(!feof(ptr))
		{
			if(a.estado==9)
			{
				cout<<a.username<<"\t""\t"<<a.contrasena<<endl;
			}
			fread(&a,sizeof(a),1,ptr);
		}
		cout<<"----------------------------------------"<<endl;
		fclose(ptr);
	}
}

int obtenerPosicionEnArchivoPsicologo(char nombre[]){
	FILE *ptr;
	Persona p;
	int cont=0,pos;
	ptr = fopen("psicologos.dat", "rb");
	if(ptr==NULL)
		cout<<"No existe el archivo"<<endl;
	else
	{
		fread(&p,sizeof(p),1,ptr);
		while (!feof(ptr))
		{
			cont++;
			if (p.nombre==nombre)
			{
				pos=cont;
			}
			fread(&p,sizeof(p),1,ptr);
		}
		fclose(ptr);
	}
	return(pos);
}
int obtenerPosicionEnArchivoAbogado(char nombre[]){
	FILE *ptr;
	Persona p;
	int cont=0,pos;
	ptr = fopen("abogados.dat", "rb");
	if(ptr==NULL)
		cout<<"No existe el archivo"<<endl;
	else
	{
		fread(&p,sizeof(p),1,ptr);
		while (!feof(ptr))
		{
			cont++;
			if (p.nombre==nombre)
			{
				pos=cont;
			}
			fread(&p,sizeof(p),1,ptr);
		}
		fclose(ptr);
	}
	return(pos);
}

