		fread(&u,sizeof(u),1,ptr);
		while (!feof(ptr))
		{
			cont++;
			if (u.nombre==nombre)
			{
				pos=cont;
			}
			fread(&u,sizeof(u),1,ptr);
		}
		fclose(ptr);
